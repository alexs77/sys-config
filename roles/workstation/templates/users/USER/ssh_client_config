Host *
  AddKeysToAgent         yes
  IdentityFile           ~/.ssh/id_ed25519
  IdentityFile           ~/.ssh/id_rsa
  ForwardAgent           yes
  StrictHostKeyChecking  no
  ControlMaster          auto
  ControlPath            ~/.ssh/.mux:%C
  ControlPersist         3600
  {# Only on macOS use "UseKeyChain" #}
  {% if ansible_distribution == "MacOSX" %}UseKeychain yes{% endif %}
